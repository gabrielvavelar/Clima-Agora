<div id="container">
  <form action="../routes/get" method="get" id="search">
    <i class="fa-solid fa-location-dot"></i>
    <input
      type="search"
      name="city_name"
      id="city_name"
      placeholder="Buscar cidade"
    />
    <button type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </form>
  <div id="weather">
    <h1 id="title">Cidade, País</h1>

    <div id="infos">
      <div id="temp" class="tempIcon">
        <img
          id="temp_img"
          src="http://openweathermap.org/img/wn/04d@2x.png"
          alt=""
        />

        <div>
          <p id="temp_value">
            Temperatura
          </p>
          <p id="temp_description">
            Descrição
          </p>
        </div>
      </div>

      <div id="other_infos">
        <div class="info">
          <i id="temp_max_icon" class="fa-solid fa-temperature-high"></i>

          <div>
            <h2>Temp. max</h2>

            <p id="temp_max">
              Temperatura Máxima
            </p>
          </div>
        </div>

        <div class="info">
          <i id="temp_min_icon" class="fa-solid fa-temperature-low"></i>

          <div>
            <h2>Temp. min</h2>

            <p id="temp_min">
              Temperatura Mínima
            </p>
          </div>
        </div>

        <div class="info">
          <i id="humidity_icon" class="fa-solid fa-droplet"></i>

          <div>
            <h2>Umidade</h2>

            <p id="humidity">
              Umidade
            </p>
          </div>
        </div>

        <div class="info">
          <i id="wind_icon" class="fa-solid fa-wind"></i>

          <div>
            <h2>Vento</h2>

            <p id="wind">
              Vento
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="alert"></div>
</div>
<script src="/js/script.js"></script>